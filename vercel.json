{
    "version": 2,
    "builds": [
      {
        "src": "src/index.js",
        "use": "@vercel/node"
      },
      {
        "src": "public/**",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "src/index.js"
      },
      {
        "src": "/(.*)",
        "dest": "public/$1"
      },
      {
        "src": "/",
        "dest": "public/index.html"
      }
    ],
    "functions": {
      "src/index.js": {
        "memory": 1024,
        "maxDuration": 60,
        "bodyParser": {
          "sizeLimit": "1024mb"
        }
      }
    }
  }
  
